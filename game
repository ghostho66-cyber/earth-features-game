  <script>
    (() => {
      const questions = [
        {
          question: { zh: "Âú∞ÁêÉÊòØ‰ªÄÈ∫ºÂΩ¢ÁãÄ", en: "What shape is the Earth" },
          answers: [
            { text: { zh: "ÁêÉÈ´î", en: "Sphere" }, icon: "üåç", type: "neutral" },
            { text: { zh: "ÊñπÂΩ¢", en: "Square" }, icon: "‚¨õ", type: "neutral", specialClass: "square-icon" },
            { text: { zh: "‰∏âËßíÂΩ¢", en: "Triangle" }, icon: "‚ñ≤", type: "neutral" }
          ],
          correct: 0
        },
        {
          question: { zh: "Âú∞ÁêÉ‰∏äÊúâ‰ªÄÈ∫º", en: "What is on the Earth" },
          answers: [
            { text: { zh: "Ê∞¥ÂíåÈô∏Âú∞", en: "Water and Land" }, icon: "üåç", type: "neutral" },
            { text: { zh: "Âè™ÊúâÊ∞¥", en: "Only Water" }, icon: "üíß", type: "water" },
            { text: { zh: "Âè™ÊúâÈô∏Âú∞", en: "Only Land" }, icon: "üå≤", type: "land" }
          ],
          correct: 0
        },
        {
          question: { zh: "Âú∞ÁêÉÊòØÂê¶Ë¢´Â§ßÊ∞£Â±§ÂåÖË¶Ü‰Ωè", en: "Is the Earth covered by an atmosphere" },
          answers: [
            { text: { zh: "ÊòØ", en: "Yes" }, icon: "üå´Ô∏è", type: "neutral" },
            { text: { zh: "Âê¶", en: "No" }, icon: "‚ùå", type: "neutral" }
          ],
          correct: 0
        },
        {
          question: { zh: "Âú∞ÁêÉ‰∏≠Ë°®Èù¢Ë¶ÜËìãËºÉÂ§öÁöÑÊòØ", en: "What covers most of Earth's surface" },
          answers: [
            { text: { zh: "Êµ∑Ê¥ã", en: "Ocean" }, icon: "üåä", type: "water" },
            { text: { zh: "Èô∏Âú∞", en: "Land" }, icon: "üå≥", type: "land" }
          ],
          correct: 0
        },
        {
          question: { zh: "‰∫∫È°ûÁîüÊ¥ªÊñºÈô∏Âú∞ÈÇÑÊòØÊµ∑Ê¥ã", en: "Do humans live on land or in the ocean" },
          answers: [
            { text: { zh: "Èô∏Âú∞", en: "Land" }, icon: "üè†", type: "land" },
            { text: { zh: "Êµ∑Ê¥ã", en: "Ocean" }, icon: "‚öì", type: "water" }
          ],
          correct: 0
        },
        {
          question: { zh: "‰ª•‰∏ãÈÇ£Á®ÆÁâ©È´îÊòØÁîüÁâ©", en: "Which of the following is a living thing" },
          answers: [
            { text: { zh: "Ëù¥Ëù∂", en: "Butterfly" }, icon: "ü¶ã", type: "land" },
            { text: { zh: "Áü≥È†≠", en: "Rock" }, icon: "ü™®", type: "neutral" },
            { text: { zh: "Ê∞¥", en: "Water" }, icon: "üíß", type: "water" }
          ],
          correct: 0
        }
      ];

      const earthRotatingContainer = document.getElementById("earth-rotating-container");
      const canvas = document.getElementById("background-canvas");
      const ctx = canvas.getContext("2d");
      const questionText = document.getElementById("question-text");
      const answersDiv = document.getElementById("answers");
      const feedbackDiv = document.getElementById("feedback");
      const celebrateSound = document.getElementById("celebrate-sound");
      const restartButton = document.getElementById("restart-button");
      const startPage = document.getElementById("start-page");
      const startButton = document.getElementById("start-button");
      const gameContainer = document.getElementById("game-container");

      let currentQuestionIndex = 0;
      let score = 0;
      let isGameOver = false;
      let nextQuestionTimeout = null;

      startButton.addEventListener("click", () => {
        startPage.style.display = "none";
        gameContainer.style.display = "flex";
        loadQuestion();
        gameLoop();
      });

      restartButton.addEventListener("click", () => {
        currentQuestionIndex = 0;
        score = 0;
        restartButton.style.display = "none";
        feedbackDiv.textContent = "";
        loadQuestion();
      });

      // Play speech synthesis with cancellation of any ongoing speech
      function playSpeech(text) {
        if ("speechSynthesis" in window) {
          window.speechSynthesis.cancel();
          let utterance = new SpeechSynthesisUtterance(text);
          utterance.lang = "zh-HK";
          window.speechSynthesis.speak(utterance);
        }
      }

      function drawBackground() {
        ctx.clearRect(0, 0, canvas.width, canvas.height);
        const starsCount = 100;
        for (let i = 0; i < starsCount; i++) {
          let x = ((i * 37 + Date.now() / 55) % canvas.width);
          let y = ((i * 52 + Date.now() / 75) % canvas.height);
          ctx.beginPath();
          ctx.arc(x, y, 1.5 + 0.5 * Math.sin(Date.now() / 220 + i), 0, Math.PI * 2);
          ctx.fillStyle = "white";
          ctx.fill();
        }
      }

      function loadQuestion() {
        clearTimeout(nextQuestionTimeout);
        isGameOver = false;
        restartButton.style.display = "none";
        feedbackDiv.textContent = "";
        if (currentQuestionIndex >= questions.length) {
          questionText.innerHTML = `<div>Á≠îÈ°åÂÆåÊàê ‰Ω†Á≠îÂ∞ç‰∫Ü ${score} / ${questions.length} È°å</div>
            <div style="font-weight: normal; font-size: 20px; color:#444;">Quiz finished You got ${score} out of ${questions.length} correct</div>`;
          answersDiv.innerHTML = "";
          playSpeech(`Á≠îÈ°åÂÆåÊàê ‰Ω†Á≠îÂ∞ç‰∫Ü ${score} È°å`);
          celebrateSound.play();
          nextQuestionTimeout = setTimeout(() => {
            restartButton.style.display = "inline-block";
          }, 2500);
          return;
        }

        const current = questions[currentQuestionIndex];
        questionText.innerHTML = `<div tabindex="0">${current.question.zh}</div><div style="font-weight: normal; font-size: 20px; color:#444;">${current.question.en}</div>`;
        answersDiv.innerHTML = "";

        // Play speech of question on mouse enter, focus
        const questionDiv = questionText.querySelector("div");
        questionDiv.addEventListener("mouseenter", () => playSpeech(current.question.zh));
        questionDiv.addEventListener("focus", () => playSpeech(current.question.zh));

        current.answers.forEach((answerObj, index) => {
          const btn = document.createElement("button");
          btn.className = "answer-button";
          btn.type = "button";
          btn.setAttribute("data-index", index);
          btn.setAttribute("aria-label", `Á≠îÈ°åÈÅ∏È†Ö ${index + 1} ${answerObj.text.zh} ${answerObj.text.en}`);

          const iconDiv = document.createElement("div");
          iconDiv.className = "answer-icon";

          if (currentQuestionIndex === 0 && answerObj.text.zh === "ÊñπÂΩ¢") {
            iconDiv.classList.add("square-icon");
          } else if (answerObj.type === "land") {
            iconDiv.classList.add("land");
          } else if (answerObj.type === "water") {
            iconDiv.classList.add("water");
          } else {
            iconDiv.classList.add("neutral");
          }

          iconDiv.textContent = answerObj.icon;
          btn.appendChild(iconDiv);

          const span = document.createElement("span");
          span.textContent = `${answerObj.text.zh} ${answerObj.text.en}`;
          span.style.marginTop = "10px";
          btn.appendChild(span);

          btn.addEventListener("click", () => answerSelected(index));
          btn.addEventListener("mouseenter", () => {
            if (!isGameOver) playSpeech(answerObj.text.zh);
          });
          btn.addEventListener("focus", () => {
            if (!isGameOver) playSpeech(answerObj.text.zh);
          });

          answersDiv.appendChild(btn);
        });

        const firstBtn = answersDiv.querySelector("button");
        if (firstBtn) firstBtn.focus();

        playSpeech(current.question.zh);
      }

      function setFeedback(text, color) {
        feedbackDiv.textContent = text;
        feedbackDiv.style.color = color;
        playSpeech(text);
      }

      function answerSelected(selectedIndex) {
        if (isGameOver) return;
        isGameOver = true;
        const current = questions[currentQuestionIndex];
        const correctIndex = current.correct;
        const answerButtons = answersDiv.querySelectorAll("button");

        if (selectedIndex === correctIndex) {
          answerButtons.forEach((btn, idx) => {
            btn.disabled = true;
            if (idx === correctIndex) btn.classList.add("correct");
            else btn.classList.remove("correct", "incorrect");
          });
          setFeedback("‰Ω†Á≠îÂï±Âíó ÂÅöÂæóÂ•ΩÂ•Ω", "#0a6a0a");
          score++;

          celebrateSound.play();

          nextQuestionTimeout = setTimeout(() => {
            currentQuestionIndex++;
            loadQuestion();
            isGameOver = false;
          }, 5000);
        } else {
          answerButtons[selectedIndex].classList.add("incorrect");
          setFeedback("Âä†Ê≤π ÂÜçË©¶‰∏ÄÊ¨°", "#a83232");
          answerButtons.forEach((btn, idx) => {
            if (idx === selectedIndex) btn.disabled = true;
            else {
              btn.disabled = false;
              btn.classList.remove("incorrect", "correct");
            }
          });
          isGameOver = false;
        }
      }

      document.addEventListener("keydown", (e) => {
        const focused = document.activeElement;
        const answerButtons = answersDiv.querySelectorAll("button");
        if (!answerButtons.length) return;

        let index = Array.from(answerButtons).indexOf(focused);

        switch (e.key) {
          case "ArrowDown":
          case "ArrowRight":
            e.preventDefault();
            if (index < answerButtons.length - 1)
              answerButtons[index + 1].focus();
            else answerButtons[0].focus();
            break;
          case "ArrowUp":
          case "ArrowLeft":
            e.preventDefault();
            if (index > 0) answerButtons[index - 1].focus();
            else answerButtons[answerButtons.length - 1].focus();
            break;
          case "Enter":
          case " ":
            if (index >= 0 && !answerButtons[index].disabled) {
              e.preventDefault();
              answerSelected(index);
            }
            break;
        }
      });

      function gameLoop() {
        drawBackground();
        window.requestAnimationFrame(gameLoop);
      }

      function resizeCanvas() {
        canvas.width = Math.min(window.innerWidth, 800);
        canvas.height = Math.min(window.innerHeight * 0.6, 600);
      }

      window.addEventListener("resize", () => {
        resizeCanvas();
      });

      function init() {
        resizeCanvas();
        document.getElementById("game-container").style.display = "none";
        document.getElementById("start-page").style.display = "flex";
      }

      window.onload = () => {
        init();
      };
    })();
  </script>
</body>

</html>
```
